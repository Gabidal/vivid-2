{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/build/"
			},
			"command": "Vivid.exe",
			"args": [
				"${workspaceFolder}",
				"${workspaceFolder}/entries/vivid.v",
				"${workspaceFolder}/libv/",
				"${workspaceFolder}/libv/windows_x64/io.v",
				"-d",
				"-f",
				"-o",
				"v"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Tests",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/build/"
			},
			"command": "Vivid.exe",
			"args": [
				"${workspaceFolder}",
				"${workspaceFolder}/entries/tests.v",
				"${workspaceFolder}/tests/assert.v",
				"${workspaceFolder}/libv/",
				"${workspaceFolder}/libv/windows_x64/io.v",
				"-a",
				"-d",
				"-f",
				"-o",
				"v"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}